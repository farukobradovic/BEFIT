@model IEnumerable<TrainingType>

@{
    ViewBag.Title = "Pregled svih kategorija na sistemu";
}

@if (Model.Any())
{
    <div class="container-no-flex">
        <a asp-action="AddCategory" asp-controller="Training" class="add-button" style="margin-right:1rem">
            <i class="fas fa-plus"></i> Dodaj kategoriju
        </a>
        <form method="post">
            <table class="products-table">
                <tr>
                    <th>Naziv</th>
                    <th>Opis</th>
                    <th><i class="fas fa-trash-alt"></i></th>
                </tr>
                @foreach (var c in Model)
                {
                    <tr>
                        <td>@c.TrainingTypeName</td>
                        <td>@c.Description</td>
                        <td><button asp-route-id=@c.TrainingTypeID class="delete-product" onclick="return confirm('Da li ste sigurni da želite obrisati kategoriju?')">Obriši</button> </td>
                    </tr>
                }
            </table>
        </form>
    </div>


}
else
{
    <p>Trenutno ne postoje uloge na sistemu</p>
}