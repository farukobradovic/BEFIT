@model IEnumerable<MessageType>

@{
    ViewBag.Title = "Pregled vrsta poruka na sistemu";
}

<div class="container-no-flex">
    <h1 style="margin-bottom:3rem; text-align:center; font-weight:400;">Pregled vrsta poruka na sistemu</h1>
    <form method="post">
        <a asp-action="Create" asp-controller="Messagetype" class="add-button" style="margin-right:1rem">
            <i class="fas fa-sticky-note"></i> Kreiraj vrstu
        </a>
        <table class="products-table">
            <tr>
                <th>Naziv</th>
                <th><i class="fas fa-trash-alt"></i></th>
            </tr>

            @foreach (var n in Model)
            {
                <tr>
                    <td>@n.Description</td>

                    <td>
                        <button type="submit" asp-route-id=@n.ID style="font-size:1.5rem; width:9rem; display:inline-block; text-align:center;" class="delete-product" onclick="return confirm('Da li ste sigurni da želite obrisati vrstu poruke?')"> Obriši</button>
                    </td>

                </tr>
            }

        </table>
    </form>
</div>